@model GiveOnline.Models.SearchViewModel
@{
    ViewBag.Title = "SearchPage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid body-fluid">
    <div>
        <img class="bannerImage" src="~/Content/Images/banner.png" />
        <div class="bannerBox">
            <h2 class="bannerText"><span class="spacer">Search</span></h2>
        </div>
    </div>
</div>
<div class="container body-content">
    <div class="row">
        <div class="col-lg-12">

            <h2>@ViewBag.Error</h2>

        </div>
    </div>
    <div id="searchcontainer">
        <table>
            <tbody>
                <tr>
                    <td>
                        @ViewBag.Events
                    </td>
                </tr>
                @foreach (var eventItem in Model.Events)
            {
                    <tr>
                        <td>
                            @eventItem.Title
                            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#event_@eventItem.Id">
                                More information
                            </button>
                        </td>
                    </tr>

                    @Html.Action("_EventModal")
                }
            </tbody>
        </table>
        <div class="my-navigation">
            <div class="simple-pagination-last"></div>
            <div class="simple-pagination-page-numbers"></div>
            <div class="simple-pagination-next"></div>
            <div>
                <select class="simple-pagination-items-per-page"></select> items per page.
            </div>
        </div>
    </div>

    <div id="searchcontainer2">
        <table>
            <tbody>
                <tr>
                    <td>
                        @ViewBag.Products
                    </td>
                </tr>
                @foreach (var productitem in Model.Products)
            {

                    <tr>
                        <td>

                            @productitem.Title
                            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#brand_@productitem.Id">
                                More information
                            </button>
                        </td>
                    </tr>

                    @Html.Action("_ProductModal")
                }
            </tbody>

        </table>
        <div class="my-navigation">
            <div class="simple-pagination-last"></div>
            <div class="simple-pagination-page-numbers"></div>
            <div class="simple-pagination-next"></div>
            <div>
                <select class="simple-pagination-items-per-page"></select> items per page.
            </div>
        </div>
    </div>



</div>


@section scripts{
    <script>
        (function ($) {

            $('#searchcontainer').simplePagination();
            $('#searchcontainer2').simplePagination();

        })(jQuery);

