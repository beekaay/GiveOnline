@model List<GiveOnline.Models.MenuBox>
@{
    ViewBag.Title = "MenuBox_Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table">
    <thead class="thead-inverse">
        <tr>
            <td>Id</td>
            <td>Title</td>
            <td>Headline</td>
            <td>Color</td>
            <td>Image</td>
            <td>Edit</td>
            <td>Delete</td>
        </tr>
    </thead>
    @foreach (var menuboxItem in Model)
    {
        <tr>
            <td>@menuboxItem.Id</td>
            <td>@menuboxItem.Title</td>
            <td>@menuboxItem.Headline</td>
            <td><div class="menuboxesColor" style="background-color:@menuboxItem.Color"></div></td>
            <td><img class="img-responsive tableImage" src="@menuboxItem.ImageUrl" /></td>
            <td>
                <a href="/Admin/MenuBox_Edit/@menuboxItem.Id">
                    <i class="glyphicon glyphicon-pencil" aria-hidden="true"></i>
                </a>
            </td>
            <td>
                <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#@menuboxItem.Id">
                    Delete
                </button>

                <div class="modal fade" id="@menuboxItem.Id" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-body">
                                <p>Are you sure you want to delete this?</p>
                                <p>there are no take backs!</p>
                            </div>
                            <div class="modal-footer">
                                <form action="/Admin/MenuBox_Delete/@menuboxItem.Id" method="post">
                                    <button type="submit" class="btn btn-danger">Delete</button>
                                </form>
                                <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
                            </div>
                        </div>
                    </div>
                </div>
            </td>
        </tr>

    }


</table>

