@model GiveOnline.Models.MenuBox
@{
    ViewBag.Title = "MenuBox_Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<form action="/Admin/MenuBox_Edit" method="post" enctype="multipart/form-data" id="menuboxCreate">

    <div class="form-group">
        <label for="title">Caption</label>
        <input type="text" class="form-control" name="title" id="title" value="@Model.Title" />
    </div>

    <div class="form-group">
        <label for="headline">Headline</label>
        <input class="form-control" name="headline" id="headline" value="@Model.Headline">
    </div>

    <div class="form-group">
        <label for="imageURL">Image</label>
        <input type="file" class="form-control" name="imageURL" id="imageURL" value="@Model.ImageUrl" />
    </div>

    <div class="form-group">
        <label for="color">Color</label>
        <input type="color" class="form-control" name="color" id="color" value="@Model.Color" />
    </div>

    <input type="hidden" name="Id" value="@Model.Id" />

    <button type="submit">Go</button>
</form>

