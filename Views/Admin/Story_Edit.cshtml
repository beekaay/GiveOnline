@model  GiveOnline.Models.StoryViewModels
@{
    ViewBag.Title = "Story_Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<form action="/Admin/Story_Edit/@Model.Story.Id" method="post" id="categoryEdit">

    <div class="form-group">
        <label for="title">Title</label>
        <input class="form-control" type="text" id="title" name="title" value="@Model.Story.Title" />
    </div>

    <div class="form-group">
        <label for="event">Event</label>
        <select id="event" class="form-control" name="eventId">

            @foreach (var storyItem in Model.Events)
            {
                if (storyItem.Id == Model.Story.EventId)
                {
                    <option selected value="@storyItem.Id">@storyItem.Title</option>
                }
                else
                {
                    <option value="@storyItem.Id">@storyItem.Title</option>
                }
            }

        </select>
    </div>



    <input type="hidden" name="Id" value="@Model.Story.Id" />

    <button class="btn btn-success" type="submit">Submit</button>
</form>