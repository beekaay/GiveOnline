@model List<GiveOnline.Models.NewsReceiver>
@{
    ViewBag.Title = "Category_Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-hover">
    <thead class="thead-inverse">
        <tr>
            <td>Id</td>
            <td>Email</td>
            <td>Delete</td>
        </tr>
    </thead>
    @foreach (var newsReceiverItem in Model)
    {
        <tr>
            <td>@newsReceiverItem.Id</td>
            <td>@newsReceiverItem.Email</td>
            <td>
                <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#@newsReceiverItem.Id">
                    Delete
                </button>

                <div class="modal fade" id="@newsReceiverItem.Id" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-body">
                                <p>Are you sure you want to delete this?</p>
                                <p>there are no take backs!</p>
                            </div>
                            <div class="modal-footer">
                                <form action="/Admin/NewsReceiver_Delete/@newsReceiverItem.Id" method="post">
                                    <button type="submit" class="btn btn-danger">Delete</button>
                                </form>
                                <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
                            </div>
                        </div>
                    </div>
                </div>
            </td>
        </tr>

    }


</table>



