@model GiveOnline.Models.StoryEventViewModels
@{
    ViewBag.Title = "Story_Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table">
    <thead class="thead-inverse">
        <tr>
            <td>Id</td>
            <td>Story</td>
            <td>Event</td>
            <td>Edit</td>
            <td>Delete</td>
        </tr>
    </thead>
    @foreach (var storyItem in Model.Stories)
    {
        <tr>
            <td>@storyItem.Id</td>
            <td>@storyItem.Title</td>
            <td>@storyItem.Events.Title</td>
            <td>
                <a href="/Admin/Story_Edit/@storyItem.Id">
                    <i class="glyphicon glyphicon-pencil" aria-hidden="true"></i>
                </a>
            </td>
            <td>
                <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#@storyItem.Id">
                    Delete
                </button>

                <div class="modal fade" id="@storyItem.Id" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-body">
                                <p>Are you sure you want to delete this?</p>
                                <p>there are no take backs!</p>
                            </div>
                            <div class="modal-footer">
                                <form action="/Admin/Story_Delete/@storyItem.Id" method="post">
                                    <button type="submit" class="btn btn-danger">Delete</button>
                                </form>
                                <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
                            </div>
                        </div>
                    </div>
                </div>
            </td>
        </tr>

    }


</table>

