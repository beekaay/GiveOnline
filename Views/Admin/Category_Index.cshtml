@model List<GiveOnline.Models.Category>
@{
    ViewBag.Title = "Category_Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<table class="table">
    <thead class="thead-inverse">
        <tr>
            <td>Id</td>
            <td>Title</td>
            <td>Date Created</td>
            <td>Edit</td>
            <td>Delete</td>
        </tr>
    </thead>
    @foreach (var categoryItem in Model)
    {
        <tr>
            <td>@categoryItem.Id</td>
            <td>@categoryItem.Title</td>
            <td>@categoryItem.CreateDate</td>
            <td>
                <a href="/Admin/Category_Edit/@categoryItem.Id">
                    <i class="glyphicon glyphicon-pencil" aria-hidden="true"></i>
                </a>
            </td>
            <td>
                <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#@categoryItem.Id">
                    Delete
                </button>

                <div class="modal fade" id="@categoryItem.Id" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-body">
                                <p>Are you sure you want to delete this?</p>
                                <p>there are no take backs!</p>
                            </div>
                            <div class="modal-footer">
                                <form action="/Admin/Category_Delete/@categoryItem.Id" method="post">
                                    <button type="submit" class="btn btn-danger">Delete</button>
                                </form>
                                <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
                            </div>
                        </div>
                    </div>
                </div>
            </td>
        </tr>

    }


</table>
